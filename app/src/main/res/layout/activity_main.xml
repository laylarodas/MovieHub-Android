<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_main.xml - Layout principal MEJORADO
    
    NUEVA ESTRUCTURA:
    - CoordinatorLayout: Layout raíz para Material Design
    - AppBarLayout: Contenedor de la Toolbar
    - Toolbar: Barra superior con título
    - SwipeRefreshLayout: Permite refrescar deslizando
    - RecyclerView: Lista de películas
    - ProgressBar: Loading inicial
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".MainActivity">

    <!--
        SECCIÓN 1: APP BAR (Barra superior)
        
        AppBarLayout: Contenedor especial para la Toolbar
        - elevation: Sombra debajo de la toolbar
        - theme: Tema oscuro para la toolbar
    -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!--
            MaterialToolbar: Barra superior moderna
            
            ATRIBUTOS:
            - popupTheme: Tema para menús que se abren desde la toolbar
            - elevation: Sombra (4dp es el estándar)
        -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!--
        SECCIÓN 2: CONTENIDO PRINCIPAL
        
        FrameLayout: Permite superponer SwipeRefreshLayout + ProgressBar
        
        app:layout_behavior: Le dice al CoordinatorLayout que este contenido
        debe estar DEBAJO de la AppBarLayout (importante para Material Design)
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--
            SwipeRefreshLayout: Habilita Pull to Refresh
            
            ¿QUÉ HACE?
            - Detecta cuando el usuario desliza hacia abajo
            - Muestra un círculo girando
            - Ejecuta el código de refresh que configuremos
            
            COLORES:
            - colorScheme: Colores del círculo de refresh
        -->
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--
                RecyclerView: Lista de películas
                (Ahora está DENTRO del SwipeRefreshLayout)
            -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_movies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:clipToPadding="false"
                tools:listitem="@layout/item_movie" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <!--
            ProgressBar: Loading inicial
            
            DIFERENCIA con SwipeRefreshLayout:
            - ProgressBar: Primera carga (pantalla vacía)
            - SwipeRefresh: Recargar cuando ya hay datos
        -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminate="true"
            tools:visibility="visible" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>